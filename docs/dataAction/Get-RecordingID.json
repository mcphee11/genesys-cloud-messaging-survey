{
  "name": "Get RecordingID",
  "integrationType": "purecloud-data-actions",
  "actionType": "custom",
  "config": {
    "request": {
      "requestUrlTemplate": "/api/v2/conversations/${input.conversationId}/recordings",
      "requestType": "GET",
      "headers": {},
      "requestTemplate": "${input.rawRequest}"
    },
    "response": {
      "translationMap": {
        "recordingIdArray": "$[*].id"
      },
      "translationMapDefaults": {},
      "successTemplate": "{\"recordingIdArray\": ${recordingIdArray}}"
    }
  },
  "contract": {
    "input": {
      "inputSchema": {
        "type": "object",
        "properties": {
          "conversationId": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "output": {
      "successSchema": {
        "type": "object",
        "properties": {
          "recordingIdArray": {
            "type": "array",
            "items": {
              "title": "recordingId",
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "secure": false
}